header#header
	div.row
		div.col-12
			div.site-branding.flex-row-center
				a.site-logo-link(href="/")
					img.site-logo(src="/img/logo/blue.png" alt="" + app.title)
				span.flex-1
				div.main-menu--container
					ul#main-menu.site-menu.flex-row-between.flex-row-sm-col.flex-row-sm-between
						li.menu-item(class={ 'current-menu-item': view.url == 'leaderboard' })
							a(href="/leaderboard/") Leaderboard
						li.menu-item(class={ 'current-menu-item': view.url == 'rewards' })
							a(href="/rewards/") Rewards
						if (user.isAdmin)
							li.menu-item(class={ 'current-menu-item': view.url == 'pending' })
								a(href="/pending/")
									if (pending && pending.length)
										span (!{pending.length})
									span Pending Rewards
							li.menu-item(class={ 'current-menu-item': view.url == 'configuration' })
								a(href="/configuration/") Configuration
						li.menu-item(class={ 'current-menu-item': view.url == 'about' })
							a(href="/about/") About
						if (user)
							li.menu-item
								a(href="/logout/") Logout
